<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.smartpersionsys.mapper.VolunteerMapper">


    <!-- Volunteer getVolunteerById(int vid);-->
    <select id="getVolunteerById" resultType="volunteer">
        select * from t_volunteers where v_id=#{vId}
    </select>

    <!--int addTotalTimeByVId(int vId); -->
    <update id="addTotalTimeByVId" >
        update t_volunteers set total_time=#{count} where v_id=#{vId}
    </update>
</mapper>